<div class='block'>
    <div class='row'>
        <div class="col-md-12">
            <h2 class='sub-header toggle-block'>
                <small class='pull-right'>
                    <i class='glyphicon glyphicon-minus'></i>
                </small>
                {% trans %}Identification{% endtrans %}:
            </h2>
        </div>
    </div>

    <div class='block meta'>
        <div class="row">
            <div class="col-md-12">
                <h2 class="sub-header titulo">
                    {{ protocol.mainSubmission.title }}
                    {% if protocol.mainSubmission.isClinicalTrial %}<small>({% trans %}clinical trial{% endtrans %})</small>{% endif %}
                </h2>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-4'>
                <div class='label'>{% trans %}Identification{% endtrans %}</div>
                <h3>{{ '%06d'|format(protocol.id) }}</h3>
            </div>

            <div class='col-md-4'>
                <div class='label'>{% trans %}Code{% endtrans %}</div>
                <h3>{{ protocol.code[:8] }}</h3>
            </div>

            <div class='col-md-4'>
                <div class='label'>{% trans %}Status{% endtrans %}</div>
                {% if protocol.status == "A" %}
                    <h3 class="text-success">{{ protocol.statusLabel|trans }}</h3>
                {% elseif protocol.status == "N" %}
                    <h3 class="text-danger">{{ protocol.statusLabel|trans }}</h3>
                {% else %}
                    <h3>{{ protocol.statusLabel|trans }}</h3>
                {% endif %}
            </div>
        </div>

        <div class='row'>
            <div class='col-md-4'>
                <div class='label'>{% trans %}Respondent Name{% endtrans %}</div>
                <h3>{{ protocol.mainSubmission.owner.name }}</h3>
            </div>

            <div class='col-md-4'>
                <div class='label'>{% trans %}Contact{% endtrans %}</div>
                <h3>{{ protocol.mainSubmission.owner.email }}</h3>
            </div>

            <div class='col-md-4'>
                <div class='label'>{% trans %}Country{% endtrans %}</div>
                <h3>{{ protocol.mainSubmission.owner.country }}</h3>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-4'>
                <div class='label'>{% trans %}Submitted in{% endtrans %}</div>
                <h3>{% if protocol.dateInformed %}{{ protocol.dateInformed|date("d/m/Y") }}{% else %}-{% endif %}</h3>
            </div>

            <div class='col-md-4'>
                <div class='label'>{% trans %}Updated in{% endtrans %}</div>
                <h3>{% if protocol.updatedIn %}{{ protocol.updatedIn|date("d/m/Y") }}{% else %}-{% endif %}</h3>
            </div>

            <div class='col-md-4'>
                <div class='label'>{% trans %}Revised in{% endtrans %}</div>
                <h3>{% if protocol.decisionIn %}{{ protocol.decisionIn|date("d/m/Y") }}{% else %}-{% endif %}</h3>
            </div>
        </div>
    </div>
</div>