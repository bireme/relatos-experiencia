<form class='form' method="POST" id='form-update-member' enctype="multipart/form-data" action="{{ path("submission_update_responsible", {submission_id: submission.id, responsible_id: responsible.id} ) }}">

    <input type="hidden" name="token" value="{{ csrf_token('submission-fourth-step') }}"/>

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">{% trans %}Update Responsible{% endtrans %}</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="input-responsible-name">*{% trans %}Name{% endtrans %}:</label>
                <input type='text' class='form-control' id='input-responsible-name' name='responsible-name' value="{{ responsible.name }}" required>
            </div>

            <div class="form-group">
                <label for="input-responsible-filiation">*{% trans %}Filiation{% endtrans %}:</label>
                <input type='text' class='form-control' id='input-responsible-filiation' name='responsible-filiation' value="{{ responsible.filiation }}" required>
            </div>

            <div class="form-group">
                <label for="input-responsible-job">*{% trans %}Job{% endtrans %}:</label>
                <input type='text' class='form-control' id='input-responsible-job' name='responsible-job' value="{{ responsible.job }}" required>
            </div>

            <div class="form-group">
                <label for="input-responsible-email">*{% trans %}Email{% endtrans %}:</label>
                <input type='email' class='form-control' id='input-responsible-email' name='responsible-email' value="{{ responsible.email }}" required>
            </div>

            <div class="form-group">
                <label for="input-responsible-phone">{% trans %}Phone{% endtrans %}:</label>
                <input type='text' class='form-control' id='input-responsible-phone' name='responsible-phone' value="{{ responsible.phone }}">
            </div>

            <div class="form-group">
                <label for="input-responsible-curriculum">{% trans %}Curriculum{% endtrans %}  {% trans %}(LinkedIn, Lattes, etc){% endtrans %}:</label>
                <input type='text' class='form-control' id='input-responsible-curriculum' name='responsible-curriculum' value="{{ responsible.curriculum }}">
            </div>

            <div class="form-group">
                <label for="input-responsible-orcid">{% trans %}ORCID{% endtrans %}:</label>
                <input type='text' class='form-control' id='input-responsible-orcid' name='responsible-orcid' value="{{ responsible.orcid }}">
            </div>

            <div class="form-group">
                <label for="input-responsible-picture">{% trans %}Picture{% endtrans %}:</label>
                <input type='file' class='form-control' name='responsible-picture' id='input-responsible-picture'>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
            <button type="submit" class="btn btn-primary" id="submit-responsible-form">{% trans %}Save{% endtrans %}</button>
        </div>
    </div>
</form>