<form class='form' method="POST" id='form-new-member' action="{{ path("submission_update_member", {submission_id: submission.id, member_id: member.id} ) }}">

    <input type="hidden" name="token" value="{{ csrf_token('submission-fourth-step') }}"/>

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">{% trans %}Update Member{% endtrans %}</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="input-member-name">*{% trans %}Name{% endtrans %}:</label>
                <input type='text' class='form-control' id='input-member-name' name='member-name' value="{{ member.name }}" required>
            </div>

            <div class="form-group">
                <label for="input-member-filiation">{% trans %}Filiation{% endtrans %}:</label>
                <input type='text' class='form-control' id='input-member-filiation' name='member-filiation' value="{{ member.filiation }}">
            </div>

            <div class="form-group">
                <label for="input-member-job">{% trans %}Job{% endtrans %}:</label>
                <input type='text' class='form-control' id='input-member-job' name='member-job' value="{{ member.job }}">
            </div>

            <div class="form-group">
                <label for="input-member-academic-formation">{% trans %}Academic Formation{% endtrans %}:</label>
                <input type='text' class='form-control' id='input-member-academic-formation' name='member-academic-formation' value="{{ member.academicFormation }}">
            </div>

            <div class="form-group">
                <label for="input-member-email">{% trans %}Email{% endtrans %}:</label>
                <input type='email' class='form-control' id='input-member-email' name='member-email' value="{{ member.email }}">
            </div>

            <div class="form-group">
                <label for="input-member-curriculum">{% trans %}Curriculum{% endtrans %}  {% trans %}(LinkedIn, Lattes, etc){% endtrans %}:</label>
                <input type='text' class='form-control' id='input-member-curriculum' name='member-curriculum' value="{{ member.curriculum }}">
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
            <button type="submit" class="btn btn-primary" id="submit-member-form">{% trans %}Save{% endtrans %}</button>
        </div>
    </div>
</form>