<form enctype="multipart/form-data" class='form' method="POST" id='form-new-item' action="{{ path('crud_admin_controlled_list_thematic_area_update', {item_id: item.id} ) }}">

    <input type="hidden" name="MAX_FILE_SIZE" value="{{ 50*1024*1024 }}" />

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{% trans %}Update Item{% endtrans %}</h4>
    </div>
    <div class="modal-body">

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-name">{% trans %}Name{% endtrans %}:</label> 
                    <input type='text' class='form-control' id="input-name" name="name" value="{% if translations.en is defined %}{{ translations.en.name }}{% else %}{{ item.name }}{% endif %}" required>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-name-es_ES">{% trans %}Name in Spanish{% endtrans %}:</label> 
                    <input type='text' class='form-control' id="input-name-es_ES" name="name-es_ES" value="{% if translations.es_ES is defined %}{{ translations.es_ES.name }}{% endif %}">
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-name-pt_BR">{% trans %}Name in Portuguese{% endtrans %}:</label> 
                    <input type='text' class='form-control' id="input-name-pt_BR" name="name-pt_BR" value="{% if translations.pt_BR is defined %}{{ translations.pt_BR.name }}{% endif %}">
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-name-fr_FR">{% trans %}Name in French{% endtrans %}:</label> 
                    <input type='text' class='form-control' id="input-name-fr_FR" name="name-fr_FR" value="{% if translations.fr_FR is defined %}{{ translations.fr_FR.name }}{% endif %}">
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'> 
                <div class="form-group">
                    <label for="select-collection">{% trans %}Collection{% endtrans %}:</label>
                    <select class='form-control' id='select-collection' name='collection' data-size="5">
                        <option value="">-</option>
                        {% for col in collection %}
                            <option value="{{ col.id }}" {% if item.collection.id == col.id %}selected{% endif %}>{{ col.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
{#
        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-file">{% trans %}Banner{% endtrans %}:</label> 
                    <input type='file' class='form-control' id="input-file" name="file">
                </div>
            </div>
        </div>
#}
        <div class='row'>
            <div class='col-md-12'> 
                <div class="form-group">
                    <div class="checkbox">
                        <label for="input-status">
                            <input type="checkbox" id='input-status' name='status' value="true" {% if item.status %}checked{% endif %}> {% trans %}Active?{% endtrans %}
                        </label>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
        <button type="submit" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
    </div>
</form> 