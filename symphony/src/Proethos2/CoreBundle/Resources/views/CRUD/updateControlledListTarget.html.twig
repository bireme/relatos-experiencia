<form class='form' method="POST" id='form-new-item' action="{{ path('crud_admin_controlled_list_target_update', {item_id: item.id} ) }}">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{% trans %}Update Item{% endtrans %}</h4>
    </div>
    <div class="modal-body">

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-name">{% trans %}Name{% endtrans %}:</label> 
                    <input type='text' class='form-control' id="input-name" name="name" value="{% if translations.en.name is defined %}{{ translations.en.name }}{% else %}{{ item.name }}{% endif %}" required>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-name-es_ES">{% trans %}Name in Spanish{% endtrans %}:</label> 
                    <input type='text' class='form-control' id="input-name-es_ES" name="name-es_ES" value="{% if translations.es_ES.name is defined %}{{ translations.es_ES.name }}{% endif %}">
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-name-pt_BR">{% trans %}Name in Portuguese{% endtrans %}:</label> 
                    <input type='text' class='form-control' id="input-name-pt_BR" name="name-pt_BR" value="{% if translations.pt_BR.name is defined %}{{ translations.pt_BR.name }}{% endif %}">
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-name-fr_FR">{% trans %}Name in French{% endtrans %}:</label> 
                    <input type='text' class='form-control' id="input-name-fr_FR" name="name-fr_FR" value="{% if translations.fr_FR.name is defined %}{{ translations.fr_FR.name }}{% endif %}">
                </div>
            </div>
        </div>

        <hr />

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-subtext">{% trans %}Description{% endtrans %}:</label> 
                    <input type='text' class='form-control' id="input-subtext" name="subtext" value="{% if translations.en.subtext is defined %}{{ translations.en.subtext }}{% else %}{{ item.subtext }}{% endif %}">
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-subtext-es_ES">{% trans %}Description in Spanish{% endtrans %}:</label> 
                    <input type='text' class='form-control' id="input-subtext-es_ES" name="subtext-es_ES" value="{% if translations.es_ES.subtext is defined %}{{ translations.es_ES.subtext }}{% endif %}">
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-subtext-pt_BR">{% trans %}Description in Portuguese{% endtrans %}:</label> 
                    <input type='text' class='form-control' id="input-subtext-pt_BR" name="subtext-pt_BR" value="{% if translations.pt_BR.subtext is defined %}{{ translations.pt_BR.subtext }}{% endif %}">
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-subtext-fr_FR">{% trans %}Description in French{% endtrans %}:</label> 
                    <input type='text' class='form-control' id="input-subtext-fr_FR" name="subtext-fr_FR" value="{% if translations.fr_FR.subtext is defined %}{{ translations.fr_FR.subtext }}{% endif %}">
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'> 
                <div class="form-group">
                    <div class="checkbox">
                        <label for="input-status">
                            <input type="checkbox" id='input-status' name='status' value="true" {% if item.status %}checked{% endif %}> {% trans %}Active?{% endtrans %}
                        </label>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
        <button type="submit" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
    </div>
</form> 