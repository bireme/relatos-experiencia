{% extends "::base.html.twig" %}

{% block title %}{% trans %}Targets{% endtrans %}{% endblock %}

{% block content %}

    <div class="container-fluid main-content see-submission">
        <div class="row">
            <div class='col-md-12'>
                <h1 class="page-header">
                    {% trans %}Targets{% endtrans %}
                    <a href='#' class='btn btn-primary' data-toggle='modal' data-target='#modal-new-item'>{% trans %}New Target{% endtrans %}</a>
                </h1>
            </div>
        </div>

        <div class='block'>
            <div class='row'>
                <div class="col-md-12">
                    <table class='table table-hover table-condensed'>

                        <thead>
                            <tr>
                                <th width="80%">{% trans %}Name{% endtrans %}</th>
                                <th width="">{% trans %}Status{% endtrans %}</th>
                                <th>{% trans %}Actions{% endtrans %}</th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for item in items %}
                                <tr>
                                    <td>{{ item.name }}</td>
                                    <td>
                                        {% if item.status %}
                                            <span class='label label-success'>{% trans %}active{% endtrans %}</span>
                                        {% else %}
                                            <span class='label label-default'>{% trans %}inactive{% endtrans %}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path("crud_admin_controlled_list_target_update", {item_id: item.id}) }}" data-toggle="modal" data-target="#modal-ajax-item" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-pencil"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal New Target -->
    <div class="modal fade" id="modal-new-item" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="item">
            <div class="modal-content">
                <form class='form' method="POST" id='form-new-item'>
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">{% trans %}New Target{% endtrans %}</h4>
                    </div>
                    <div class="modal-body">

                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="form-group">
                                    <label for="input-name">{% trans %}Name in English{% endtrans %}:</label> 
                                    <input type='text' class='form-control' id="input-name" name="name" required>
                                </div>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="form-group">
                                    <label for="input-name-es_ES">{% trans %}Name in Spanish{% endtrans %}:</label> 
                                    <input type='text' class='form-control' id="input-name-es_ES" name="name-es_ES">
                                </div>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="form-group">
                                    <label for="input-name-pt_BR">{% trans %}Name in Portuguese{% endtrans %}:</label> 
                                    <input type='text' class='form-control' id="input-name-pt_BR" name="name-pt_BR">
                                </div>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="form-group">
                                    <label for="input-name-fr_FR">{% trans %}Name in French{% endtrans %}:</label> 
                                    <input type='text' class='form-control' id="input-name-fr_FR" name="name-fr_FR">
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="form-group">
                                    <label for="input-subtext">{% trans %}Description in English{% endtrans %}:</label> 
                                    <input type='text' class='form-control' id="input-subtext" name="subtext">
                                </div>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="form-group">
                                    <label for="input-subtext-es_ES">{% trans %}Description in Spanish{% endtrans %}:</label> 
                                    <input type='text' class='form-control' id="input-subtext-es_ES" name="subtext-es_ES">
                                </div>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="form-group">
                                    <label for="input-subtext-pt_BR">{% trans %}Description in Portuguese{% endtrans %}:</label> 
                                    <input type='text' class='form-control' id="input-subtext-pt_BR" name="subtext-pt_BR">
                                </div>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="form-group">
                                    <label for="input-subtext-fr_FR">{% trans %}Description in French{% endtrans %}:</label> 
                                    <input type='text' class='form-control' id="input-subtext-fr_FR" name="subtext-fr_FR">
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
                        <button type="submit" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal ajax Target -->
    <div class="modal fade" id="modal-ajax-item" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="item">
            <div class="modal-content"></div>
        </div>
    </div>

{% endblock %}

{% block script %}
    <script>
        $(function(){

        });
    </script>
{% endblock %}